    <gcds-breadcrumbs-item href=`/${myLang}/page-2``>Page 2</gcds-breadcrumbs-item>
    <gcds-breadcrumbs-item href=`/${myLang}/page-3``>Page 3</gcds-breadcrumbs-item>
</gcds-breadcrumbs>